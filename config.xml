<?xml version='1.0' encoding='utf-8'?>

<widget id="io.zland.app" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <!-- app details -->
    <name>zland</name>
    <description>
        zland
    </description>
    <author email="florian@zland.io" href="http://zland.io">
        Florian Biewald
    </author>
    <content src="index.html" />

    <!-- access origin -->
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />

    <!-- preferences -->
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />
    <preference name="target-device" value="handset" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="5000" />

    <!-- intents -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <!-- platform specifics -->
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/android/images/splash-hdpi-landscape.png" density="land-hdpi"/>
        <splash src="res/android/images/splash-ldpi-landscape.png" density="land-ldpi"/>
        <splash src="res/android/images/splash-mdpi-landscape.png" density="land-mdpi"/>
        <splash src="res/android/images/splash-xhdpi-landscape.png" density="land-xhdpi"/>

        <splash src="res/android/images/splash-hdpi-portrait.png" density="port-hdpi"/>
        <splash src="res/android/images/splash-ldpi-portrait.png" density="port-ldpi"/>
        <splash src="res/android/images/splash-mdpi-portrait.png" density="port-mdpi"/>
        <splash src="res/android/images/splash-xhdpi-portrait.png" density="port-xhdpi"/>

        <icon src="res/android/images/icon-ldpi.png" density="ldpi" />
        <icon src="res/android/images/icon-mdpi.png" density="mdpi" />
        <icon src="res/android/images/icon-hdpi.png" density="hdpi" />
        <icon src="res/android/images/icon-xhdpi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="local"/>

        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/ios/images/icon-60_60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/images/icon-60_60.png" width="60" height="60" />
        <icon src="res/ios/images/icon-60_60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/ios/images/icon-76_76.png" width="76" height="76" />
        <icon src="res/ios/images/icon-76_76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/ios/images/icon-40_40.png" width="40" height="40" />
        <icon src="res/ios/images/icon-40_40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/images/icon-57_57.png" width="57" height="57" />
        <icon src="res/ios/images/icon-57_57@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/ios/images/icon-72_72.png" width="72" height="72" />
        <icon src="res/ios/images/icon-72_72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/images/icon-small-29_29.png" width="29" height="29" />
        <icon src="res/ios/images/icon-small-29_29@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/images/icon-50_50.png" width="50" height="50" />
        <icon src="res/ios/images/icon-50_50@2x.png" width="100" height="100" />

        <!-- images are determined by width and height. The following are supported -->
         <splash src="res/ios/images/screen~iphone.png" width="320" height="480"/>
         <splash src="res/ios/images/screen@2x~iphone.png" width="640" height="960"/>
         <splash src="res/ios/images/screen-Portrait~ipad.png" width="768" height="1024"/>
         <splash src="res/ios/images/screen-Portrait@2x~ipad.png" width="1536" height="2048"/>
         <splash src="res/ios/images/screen-Landscape~ipad.png" width="1024" height="768"/>
         <splash src="res/ios/images/screen-Landscape@2x~ipad.png" width="2048" height="1536"/>
         <splash src="res/ios/images/screen-568h@2x~iphone.png" width="640" height="1136"/>
         <splash src="res/ios/images/screen-667h.png" width="750" height="1334"/>
         <splash src="res/ios/images/screen-736h.png" width="1242" height="2208"/>
         <splash src="res/ios/images/screen-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
</widget>
